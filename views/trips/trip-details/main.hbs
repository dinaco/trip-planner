<h2>Trip to {{cityName}} from {{formatStartDate}} to {{formatEndDate}}</h2>
<div class="container">
  <div id="map"></div>
  <div id="infowindow-content">
    <form action="/trips/trip-details/{{_id}}/create" method="post">
    <div id="place-name" class="title"></div>
    <div id="place-address"></div>
     <input type="hidden" name="newActName" id="newActName" />
      <input type="hidden" name="newActlLat" id="newActlLat" />
      <input type="hidden" name="newActlLng" id="newActlLng" />
      <input
      type="hidden"
      name="initLat"
      id="initLat"
      value="{{cityLocation.coordinates.[0]}}"
    />
    <input
      type="hidden"
      name="initLng"
      id="initLng"
      value="{{cityLocation.coordinates.[1]}}"
    />
      <div id="submitBtn"></div>
    </form>
  </div>
  <div class="map-side">
<input type="text" name="searchActivities" id="searchActivities" />

</div>
  <aside>

    
    {{#each places}}
      <p><b class="place-name">{{name}}</b>: {{description}}</p>
      <input
        type="text"
        class="dbLng"
        value="{{location.coordinates.[0]}}"
        hidden
      />
      <input
        type="text"
        class="dbLat"
        value="{{location.coordinates.[1]}}"
        hidden
      />
    {{/each}}
        {{#each dateArr}}
      <p>{{this}}</p>
    {{/each}}
  </aside>

</div>
<script
  async
  src="https://maps.googleapis.com/maps/api/js?key={{mapsKey}}&callback=initMap&libraries=places"
>
</script>
<script src="../../../js/maps.js"></script>