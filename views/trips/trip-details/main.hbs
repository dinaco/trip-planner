<h3>Hey,
  {{user.username}}</h3>

<a href="/">Back Home</a>

<div class="container">
  <div id="map"></div>

  <aside>
    <form action="/trips/trip-details/{{_id}}/create" method="post">

      <label for="name">Name</label>
      <input type="text" name="name" />

      <label for="description">Description</label>
      <input type="text" name="description" />

      <label>Address</label>
      <input type="text" name="latitude" id="lat" />
      <input type="text" name="longitude" id="lng" />
      <button type="submit">Submit</button>
    </form>

    {{#each places}}
      <p><b class="place-name">{{name}}</b>: {{description}}</p>
      <input
        type="text"
        class="dbLng"
        value="{{location.coordinates.[0]}}"
        hidden
      />
      <input
        type="text"
        class="dbLat"
        value="{{location.coordinates.[1]}}"
        hidden
      />
    {{/each}}
  </aside>

</div>
<script
  async
  src="https://maps.googleapis.com/maps/api/js?key={{mapsKey}}&callback=initMap"
>
</script>
<script src="../../../js/maps.js"></script>