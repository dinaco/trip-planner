<main id="planet-earth">
  <div
    class="container d-flex flex-column justify-content-center align-items-center text-white"
  >
    <h1 class="pb-4 mt-3">
      Sign Up
    </h1>

    <form
      action="/signup"
      method="POST"
      enctype="multipart/form-data"
      class="d-flex flex-column rounded-3 frame10 gap-2"
    >
      <label for="firstName" class="text-shadow-magic">First name</label>
      <input type="text" name="firstName" required />

      <label for="lastName" class="text-shadow-magic">Last name</label>
      <input type="text" name="lastName" required />

      <label for="email" class="text-shadow-magic">Email</label>
      <input type="email" name="email" required />

      <label for="password" class="text-shadow-magic">Password</label>
      <input type="password" name="password" required />

      <label for="profileImage" class="text-shadow-magic">Profile picture</label>
      <input type="file" name="profileImage" class="text-shadow-magic" />

      <button type="submit" class="btn btn-primary">Sign Up</button>
      <a href="/" class="btn btn-dark mt-5">Already have an account? Log in!</a>
    </form>
    {{#if errorMessage}}
      <span class="alert alert-danger">
        {{errorMessage}}
      </span>
    {{/if}}
  </div>
</main>